<%- include('../partials/header', { title: 'Regisztráció' }) %>

<div id="main" class="wrapper style1">
    <div class="container medium">
        
        <div class="hero-section">
            <h1 class="hero-title">Regisztráció</h1>
            <p style="color: #ccc;">Csatlakozz az F1 Akadémiához</p>
        </div>

        <div class="card-f1">
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" style="background: rgba(220, 53, 69, 0.8); color: white; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
                    <%= error %>
                </div>
            <% } %>

           
            <form method="post" action="<%= baseUrl %>/register">
                <div class="row gtr-uniform">
                    <div class="col-12">
                        <input type="text" name="name" placeholder="Teljes név" style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>
                    <div class="col-12">
                        <input type="email" name="email" placeholder="Email cím" style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>
                    <div class="col-12">
                        <input type="password" name="password" placeholder="Jelszó (min. 6 karakter)" style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>
                    <div class="col-12">
                        <ul class="actions special">
                            <li><input type="submit" value="Regisztráció" class="button primary" /></li>
                            
                            <li><a href="<%= baseUrl %>/" class="button">Mégse</a></li>
                        </ul>
                    </div>
                </div>
            </form>

            
            <div style="text-align: center; margin-top: 20px;">
                <p style="color: #ccc;">Már van fiókod? <a href="<%= baseUrl %>/login" style="color: #e10600;">Jelentkezz be itt!</a></p>
            </div>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>