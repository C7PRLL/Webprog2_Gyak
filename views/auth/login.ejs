<%- include('../partials/header', { title: 'Belépés' }) %>

<div id="main" class="wrapper style1">
    <div class="container medium">
        
        <!-- Címsor -->
        <div class="hero-section">
            <h1 class="hero-title">Bejelentkezés</h1>
            <p style="color: #ccc;">Lépj be a fiókodba</p>
        </div>

        <!-- Űrlap doboz -->
        <div class="card-f1">
            <!-- Hibaüzenet kezelése -->
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" style="background: rgba(220, 53, 69, 0.8); color: white; padding: 10px; border-radius: 5px; margin-bottom: 20px;">
                    <%= error %>
                </div>
            <% } %>


            <form method="post" action="<%= baseUrl %>/login">
                <div class="row gtr-uniform">
                    <div class="col-12">
                        <label style="color: white;">Email cím</label>
                        <input type="email" name="email" placeholder="pelda@email.com" style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>
                    <div class="col-12">
                        <label style="color: white;">Jelszó</label>
                        <input type="password" name="password" placeholder="Jelszó" style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>
                    <div class="col-12">
                        <ul class="actions special">
                            <li><input type="submit" value="Belépés" class="button primary" /></li>
                     
                            <li><a href="<%= baseUrl %>/" class="button">Mégse</a></li>
                        </ul>
                    </div>
                </div>
            </form>
            
