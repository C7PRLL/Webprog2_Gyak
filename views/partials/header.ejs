<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>F1 Akadémia</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Landed CSS -->
    <link rel="stylesheet" href="/assets/css/main.css" />
    <noscript><link rel="stylesheet" href="/assets/css/noscript.css" /></noscript>
    
    <!-- Saját CSS (A táblázatokhoz) -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Ikonok -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="is-preload landing">
    <div id="page-wrapper">

        <!-- HEADER KEZDETE -->
        <header id="header">
            <h1 id="logo"><a href="/">F1 Akadémia</a></h1>
            <nav id="nav">
                <ul>
                    <li><a href="/">Főoldal</a></li>
                    <li><a href="/pilots">CRUD</a></li>
                    <li><a href="/diagrams">Diagramok</a></li>
                    <li><a href="/database">Adatbázis</a></li>
                    <li><a href="/contact">Kapcsolat</a></li>


                 <% if (typeof user !== 'undefined' && user) { %>
                     <% if (user.is_admin) { %>
                    <li>
                        <a href="/admin/messages" class="button small" style="background-color: #e10600 !important; color: white !important; margin-right: 10px;">Admin</a>
                    </li>
                <% } %>
                <!-- HA BE VAN JELENTKEZVE -->
                <li><span style="color: rgba(255,255,255,0.7); margin-right: 10px;">Üdv, <%= user.name %>!</span></li>
                <li><a href="/logout" class="button primary small">Kilépés</a></li>
            <% } else { %>
                
                <!-- HA NINCS BEJELENTKEZVE (INLINE LOGIN) -->
                <li style="margin-right: 5px;">
                    <form action="/login" method="POST" style="margin: 0; display: flex; gap: 5px; align-items: center;">
                        <!-- Email mező -->
                        <input type="email" name="email" placeholder="Email" required 
                               class="header-input" />
                        
                        <!-- Jelszó mező -->
                        <input type="password" name="password" placeholder="Jelszó" required 
                               class="header-input" />
                        
                        <!-- Belépés gomb (kis nyíl vagy szöveg) -->
                        <button type="submit" class="button primary small icon solid fa-sign-in-alt" style="height: 2.2em; line-height: 2.2em; padding: 0 0.8em; box-shadow: none;">
                        </button>
                    </form>
                </li>
                <!-- Regisztráció gomb marad -->
                <li><a href="/register" class="button small alt">Regisztráció</a></li>
            <% } %>
        </ul>
    </nav>
</header>