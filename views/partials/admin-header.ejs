<!-- Admin Címsor -->
<div class="hero-section">
  
    <h1 class="hero-title"><%= typeof title !== 'undefined' ? title : 'Adminisztráció' %></h1>
    <p style="color: #ccc;">
        <i class="fa-solid <%= typeof icon !== 'undefined' ? icon : 'fa-cogs' %>"></i> Rendszer kezelése
    </p>
</div>

<!-- Admin Navigációs Gombok -->
<div class="row mb-4" style="margin-bottom: 20px;">
    <div class="col-12">
        <div class="btn-group" role="group">
            <!-- Üzenetek Gomb -->
         
            <a href="<%= baseUrl %>/admin/messages" 
               class="button <%= (typeof activePage !== 'undefined' && activePage === 'messages') ? 'primary' : 'alt' %>">
               Beérkezett Üzenetek
            </a>
            
            <!-- Felhasználók Gomb -->
            <a href="<%= baseUrl %>/admin/users" 
               class="button <%= (typeof activePage !== 'undefined' && activePage === 'users') ? 'primary' : 'alt' %>">
               Felhasználók
            </a>
        </div>
    </div>
</div>