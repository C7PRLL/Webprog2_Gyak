<%- include('../partials/header', { title: 'Regisztráció' }) %>

<div id="main" class="wrapper style1">
    <div class="container medium">
        
        <div class="hero-section">
            <h1 class="hero-title">Regisztráció</h1>
            <p style="color: #ccc;">Csatlakozz az F1 Tech közösséghez</p>
        </div>

        <div class="card-f1">
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div style="background: rgba(220, 53, 69, 0.8); color: white; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                    <%= error %>
                </div>
            <% } %>

            <form method="post" action="/register">
                <div class="row gtr-uniform">
                    
                    <!-- Név -->
                    <div class="col-12">
                        <label style="color: white;">Teljes Név</label>
                        <input type="text" name="name" placeholder="Pl. Kiss Pista" 
                               style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>

                    <!-- Email -->
                    <div class="col-12">
                        <label style="color: white;">Email Cím</label>
                        <input type="email" name="email" placeholder="email@pelda.hu" 
                               style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required />
                    </div>

                    <!-- Jelszó -->
                    <div class="col-12">
                        <label style="color: white;">Jelszó (min. 8 karakter)</label>
                        <input type="password" name="password" placeholder="********" 
                               style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required minlength="8" />
                    </div>

                    <!-- Gomb -->
                    <div class="col-12">
                        <ul class="actions special">
                            <li><button type="submit" class="button primary">Regisztráció</button></li>
                            <li><a href="/" class="button">Vissza</a></li>
                        </ul>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>