<%- include('../partials/header', { title: 'Szerkesztés' }) %>

<div id="main" class="wrapper style1">
    <div class="container medium">
        
        <!-- Címsor -->
        <div class="hero-section">
            <h1 class="hero-title">Szerkesztés: <%= pilot.name %></h1>
            <p style="color: #ccc;">Adatok módosítása</p>
        </div>

        <!-- Űrlap doboz -->
        <div class="card-f1">
            <!-- JAVÍTVA: pilot_id használata az action-ben -->
            <form action="<%= baseUrl %>/pilots/edit/<%= pilot.pilot_id %>" method="POST">
                <div class="row gtr-uniform">
                    
                    <div class="col-12">
                        <label style="color: white;">Név</label>
                        <input type="text" name="name" value="<%= pilot.name %>" 
                               style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;" required>
                    </div>
                    
                    <div class="col-12">
                        <label style="color: white;">Csapat</label>
                        <input type="text" name="team" value="<%= pilot.team %>" 
                               style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;">
                    </div>
                    
                    <div class="col-12">
                        <label style="color: white;">Nemzetiség</label>
                        <input type="text" name="nationality" value="<%= pilot.nationality %>" 
                               style="background: rgba(0,0,0,0.3); border: 1px solid #555; color: white;">
                    </div>

                    <!-- Gombok -->
                    <div class="col-12">
                        <ul class="actions special">
                            <li><button class="button primary">Frissítés</button></li>
                            <li><a href="<%= baseUrl %>/pilots" class="button">Mégse</a></li>
                        </ul>
                    </div>
                    
                </div>
            </form>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>