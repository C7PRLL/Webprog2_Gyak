<%- include('../partials/header', { title: pilot.name }) %>

<div id="main" class="wrapper style1">
    <div class="container medium">
        
        <!-- Fejléc -->
        <div class="hero-section">
            <h1 class="hero-title"><%= pilot.name %></h1>
            <p style="color: #ccc;">Pilóta Adatlap</p>
        </div>

        <!-- Adatlap Kártya -->
        <div class="card-f1" style="text-align: center;">
            <div class="row gtr-uniform">
                
                <!-- Csapat -->
                <div class="col-6 col-12-xsmall">
                    <div style="background: rgba(255,255,255,0.1); padding: 20px; border-radius: 10px;">
                        <h3 style="color: #e10600;">Csapat</h3>
                        <p style="font-size: 1.5em; margin: 0; color: white;"><%= pilot.team %></p>
                    </div>
                </div>

                <!-- Nemzetiség -->
                <div class="col-6 col-12-xsmall">
                    <div style="background: rgba(255,255,255,0.1); padding: 20px; border-radius: 10px;">
                        <h3 style="color: #e10600;">Nemzetiség</h3>
                        <p style="font-size: 1.5em; margin: 0; color: white;"><%= pilot.nationality %></p>
                    </div>
                </div>

                <!-- ID -->
                <div class="col-12">
               
                    <p style="color: #666;">Adatbázis ID: #<%= pilot.pilot_id %></p>
                </div>

                <!-- Gombok -->
                <div class="col-12">
                    <ul class="actions special">
                        
                        <li><a href="<%= baseUrl %>/pilots" class="button alt">Vissza a listához</a></li>
                
                        <li><a href="<%= baseUrl %>/pilots/edit/<%= pilot.pilot_id %>" class="button primary">Szerkesztés</a></li>
                    </ul>
                </div>

            </div>
        </div>

    </div>
</div>

<%- include('../partials/footer') %>