<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bajnokok Csarnoka</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .hero-section {
            text-align: center;
            padding: 40px 0;
            background: linear-gradient(135deg, #15151e 0%, #2c3e50 100%);
            color: white;
            margin-bottom: 30px;
            border-radius: 0 0 20px 20px;
        }
        .hero-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #ff6b6b;
        }
        .card-f1 {
            background: white;
            border: 1px solid rgba(0,0,0,0.1);
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            padding: 25px;
            margin-bottom: 30px;
        }
        .text-f1 { color: #e10600; }
        .btn-f1 {
            background-color: #e10600;
            color: white;
            border: none;
        }
        .btn-f1:hover { background-color: #b30000; color: white; }
        .btn-outline-f1 {
            border: 2px solid #e10600;
            color: #e10600;
            text-decoration: none;
            padding: 8px 20px;
            border-radius: 5px;
            display: inline-block;
        }
        .btn-outline-f1:hover { background-color: #e10600; color: white; }

        /* SCROLLABLE TABLE CSS (A Blade @push része volt) */
        .scrollable-table {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid rgba(255, 107, 107, 0.3);
            border-radius: 10px;
        }
        .scrollable-table::-webkit-scrollbar { width: 8px; }
        .scrollable-table::-webkit-scrollbar-track { background: rgba(0, 0, 0, 0.1); border-radius: 4px; }
        .scrollable-table::-webkit-scrollbar-thumb { background: #ff6b6b; border-radius: 4px; }
        .scrollable-table::-webkit-scrollbar-thumb:hover { background: #e74c3c; }
        
        .table-f1 thead { background-color: #15151e; color: white; }
    </style>
</head>
<body>

    <!-- Egyszerű Navigáció -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">F1 Tech Adatbázis</a>
            <a href="/" class="btn btn-sm btn-outline-light">Vissza</a>
        </div>
    </nav>

    <!-- Hero Header -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">Bajnokok Csarnoka</h1>
            <p class="text-white-50">Pilóták és versenyek történelmi adatai szűréssel</p>
        </div>
    </div>

    <div class="container content-section">
        
        <!-- Pilots Section -->
        <div class="card-f1">
            <h2 class="text-f1 mb-4"><strong>Pilóták</strong></h2>
            
            <!-- Pilots Filter Form -->
            <div class="row mb-3">
                <div class="col-md-8">
                    <form method="GET" action="/database" class="d-flex gap-2 flex-wrap">
                        <!-- Megtartjuk a GP szűrőket is hidden mezőben, hogy ne vesszenek el -->
                        <input type="hidden" name="year" value="<%= query.year %>">
                        <input type="hidden" name="location" value="<%= query.location %>">

                        <input type="text" class="form-control w-auto" name="search" 
                               value="<%= query.search %>" placeholder="Keresés név alapján...">
                        
                        <select class="form-select w-auto" name="nationality">
                            <option value="">Minden nemzetiség</option>
                            <% nationalities.forEach(function(nat) { %>
                                <option value="<%= nat %>" <%= query.nationality === nat ? 'selected' : '' %>>
                                    <%= nat %>
                                </option>
                            <% }); %>
                        </select>
                        
                        <button type="submit" class="btn btn-f1">Szűrés</button>
                        <% if(query.search || query.nationality) { %>
                            <a href="/database" class="btn btn-outline-secondary">Törlés</a>
                        <% } %>
                    </form>
                </div>
                <div class="col-md-4 text-end">
                    <span class="badge bg-danger fs-6"><%= pilots.length %> pilóta</span>
                </div>
            </div>

            <% if(pilots.length > 0) { %>
                <div class="scrollable-table">
                    <table class="table table-f1 table-hover mb-0">
                        <thead class="sticky-top">
                            <tr>
                                <th>ID</th>
                                <th>Név</th>
                                <th>Nem</th>
                                <th>Születési dátum</th>
                                <th>Nemzetiség</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pilots.forEach(function(pilot) { %>
                            <tr>
                                <td><span class="badge bg-secondary"><%= pilot.az %></span></td>
                                <td class="fw-bold"><%= pilot.name %></td>
                                <td>
                                    <% if(pilot.gender == 'F' || pilot.gender == 'M') { %>
                                        <span class="badge bg-primary">Férfi</span>
                                    <% } else if(pilot.gender == 'N') { %>
                                        <span class="badge bg-warning text-dark">Nő</span>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td><%= pilot.birth_date ? new Date(pilot.birth_date).toLocaleDateString('hu-HU').replace(/\s/g, '') : '-' %></td>
                                <td><%= pilot.nationality || '-' %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-3">
                    <p>Nincsenek pilóták a megadott feltételekkel.</p>
                </div>
            <% } %>
        </div>

        <!-- Grand Prix Section -->
        <div class="card-f1 mb-5">
            <h2 class="text-f1 mb-4"><strong>Nagydíjak</strong></h2>
            
            <!-- Grand Prix Filter Form -->
            <div class="row mb-3">
                <div class="col-md-8">
                    <form method="GET" action="/database" class="d-flex gap-2 flex-wrap">
                        <!-- Megtartjuk a Pilóta szűrőket is hidden mezőben -->
                        <input type="hidden" name="search" value="<%= query.search %>">
                        <input type="hidden" name="nationality" value="<%= query.nationality %>">

                        <select class="form-select w-auto" name="year">
                            <option value="">Minden év</option>
                            <% years.forEach(function(yr) { %>
                                <option value="<%= yr %>" <%= query.year == yr ? 'selected' : '' %>>
                                    <%= yr %>
                                </option>
                            <% }); %>
                        </select>
                        
                        <input type="text" class="form-control w-auto" name="location" 
                               value="<%= query.location %>" placeholder="Keresés helyszín alapján...">
                        
                        <button type="submit" class="btn btn-f1">Szűrés</button>
                    </form>
                </div>
                <div class="col-md-4 text-end">
                    <span class="badge bg-danger fs-6"><%= grandPrix.length %> verseny</span>
                </div>
            </div>

            <% if(grandPrix.length > 0) { %>
                <div class="scrollable-table">
                    <table class="table table-f1 table-hover mb-0">
                        <thead class="sticky-top">
                            <tr>
                                <th>ID</th>
                                <th>Dátum</th>
                                <th>Verseny neve</th>
                                <th>Helyszín</th>
                                <th>Év</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% grandPrix.forEach(function(gp) { %>
                            <tr>
                                <td><span class="badge bg-secondary"><%= gp.id %></span></td>
                                <td><%= new Date(gp.race_date).toLocaleDateString('hu-HU').replace(/\s/g, '') %></td>
                                <td class="fw-bold"><%= gp.name %></td>
                                <td><%= gp.location %></td>
                                <td><span class="badge bg-info text-dark"><%= new Date(gp.race_date).getFullYear() %></span></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="text-center py-3">
                    <p>Nincsenek versenyek a megadott feltételekkel.</p>
                </div>
            <% } %>
        </div>

        <!-- Back Button -->
        <div class="text-center mt-5 mb-5">
            <a href="/" class="btn btn-outline-f1">← Vissza a főoldalra</a>
        </div>
    </div>

</body>
</html>